<p id="notice"><%= notice %></p>

<p>
  <strong>Tipo:</strong>
  <%= "TODO" %>
</p>

<p>
  <strong>Descripcion:</strong>
  <%= @incident.descripcion %>
</p>

<p>
  <strong>Prioridad:</strong>
  <%= @incident.prioridad %>
</p>

<p>
  <strong>Estado:</strong>
  <%= @incident.estado%>
</p>

<% if @incident.estado == "CERRADO" %>
  <strong>Finaliz√≥:</strong>
  <%= @encargado.name %> <br/><br/>
<% else %>
  <p>
    <strong>Encargado:</strong>
    <% if @encargado.nil? %>
      No hay nadie encargado actualmente. 
      <% if session[:user_type] == 1 %>
        <%= link_to 'Asignar', incident_assign_path(@incident) %>
      <% end %>
    <% else %>
      <%= @encargado.name %>
    <% end %>
  </p>
<% end %>

<%= link_to 'Ver historial', incident_attempts_path(@incident) %> |
<% if @incident.estado == 'OCUPADO' && session[:user_type] == 1 %>
  <%= link_to 'Marcar como terminado', incident_close_path(@incident) %> |
<% end %>
<% if @incident.estado != "CERRADO" && session[:user_type] == 1 && @incident.encargado = current_user.employee_id %>
  <%= link_to 'Terminar intento', new_incident_attempt_path(@incident) %> |
<% end %>
<%= link_to 'Atras', incidents_path %>
